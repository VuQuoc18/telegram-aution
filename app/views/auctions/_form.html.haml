= form_for(auction) do |f|
  - if auction.errors.any?
    #error_explanation
      %h2
        = pluralize(auction.errors.count, "error")
        prohibited this auction from being saved:
      %ul
        - auction.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :image
    = f.text_field :image, class: 'form-control'
  .form-group
    = f.label :start_price
    = f.text_field :start_price, class: 'form-control'
  .form-group
    = f.label :bet
    = f.text_field :bet, class: 'form-control'
  .actions
    = f.submit class: 'btn btn-primary'
